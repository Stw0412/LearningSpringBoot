package com.example.demo.Controller;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.example.demo.model.HelloName;
import com.example.demo.model.HelloResponseModel;

@RestController
public class HomeController {

	@GetMapping("/home")
    public String hello(@RequestParam(value = "name", defaultValue = "Team Sutthiwat silaket") String name) {
        return String.format("Hello %s", name);
    }

    @PostMapping("/home")
    public HelloResponseModel hello(@RequestBody HelloName request) {
        String name = request.getName();
        return new HelloResponseModel("Hello, " + name);
    }
    
    
}
