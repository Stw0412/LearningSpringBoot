package com.example.demo;

// ไม่ต้อง import อะไรเพิ่ม ถ้า Student อยู่ใน package เดียวกัน
public class Student {
    private String name;
    private int age;

    // Constructors (Optional แต่ดีต่อการสร้าง object)
    public Student() {
    }

    public Student(String name, int age) {
        this.name = name;
        this.age = age;
    }

    // Getters
    public String getName() {
        return name;
    }

    public int getAge() {
        return age;
    }

    // Setters
    public void setName(String name) {
        this.name = name;
    }

    public void setAge(int age) {
        this.age = age;
    }
}